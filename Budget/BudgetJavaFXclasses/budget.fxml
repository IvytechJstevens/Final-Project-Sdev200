<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="BudgetController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <RowConstraints vgrow="ALWAYS"/>
    <ColumnConstraints hgrow="ALWAYS"/>
    <children>
        <Label text="Budget ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="budgetIDField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <!-- Other labels and text fields for other budget properties -->
        <Button text="Create Budget" onAction="#createBudget" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Button text="Update Budget" onAction="#updateBudget" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Button text="Delete Budget" onAction="#deleteBudget" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    </children>
</GridPane>
