<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="TransactionController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <RowConstraints vgrow="ALWAYS"/>
    <ColumnConstraints hgrow="ALWAYS"/>
    <children>
        <Label text="Transaction ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="transactionIDField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <!-- Other labels and text fields for other transaction properties -->
        <Button text="Add Transaction" onAction="#addTransaction" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Button text="Update Transaction" onAction="#updateTransaction" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Button text="Delete Transaction" onAction="#deleteTransaction" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    </children>
</GridPane>
